
<div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
       <%= image_tag @accountant.image.url %>
       <br> 
      <strong><%= @accountant.company_name %></strong>
      <br>
      <br>
      <strong>Company Website:</strong>  
      <%= link_to @accountant.company_website, @accountant.company_website %><br>
      
      
      <strong>Company contact name:</strong>  
     <%= @accountant.contact_name %>
     <br>
      <strong>Company phone:</strong> 
     <%= @accountant.company_phone %><br>
      <strong>Email contact:</strong> 
     <%= @accountant.email %><br>
     <strong>Address:</strong>  
     <%= @accountant.address %><br>
      <strong>City:</strong>  
     <%= @@accountant.city %><br>
     <strong>Zipcode:</strong>  
     <%= @accountant.zipcode %><br>
    </div>
     <br>

  </div>
  <div class="col-md-6">
    <h5><strong>General Company Information:</strong></h5>
    <%= @accountant.company_description %>
