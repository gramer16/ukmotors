<h1>Listing windows</h1>

<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>Company description</th>
      <th>Address</th>
      <th>City</th>
      <th>Zipcode</th>
      <th>Contact name</th>
      <th>Company website</th>
      <th>Company phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @windows.each do |window| %>
      <tr>
        <td><%= window.company_name %></td>
        <td><%= window.company_description %></td>
        <td><%= window.address %></td>
        <td><%= window.city %></td>
        <td><%= window.zipcode %></td>
        <td><%= window.contact_name %></td>
        <td><%= window.company_website %></td>
        <td><%= window.company_phone %></td>
        <td><%= window.email %></td>
        <td><%= link_to 'Show', window %></td>
        <td><%= link_to 'Edit', edit_window_path(window) %></td>
        <td><%= link_to 'Destroy', window, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Window', new_window_path %>
