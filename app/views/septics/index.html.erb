<h1>Listing septics</h1>

<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>Company description</th>
      <th>Address</th>
      <th>City</th>
      <th>Zipcode</th>
      <th>Contact name</th>
      <th>Company website</th>
      <th>Company phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @septics.each do |septic| %>
      <tr>
        <td><%= septic.company_name %></td>
        <td><%= septic.company_description %></td>
        <td><%= septic.address %></td>
        <td><%= septic.city %></td>
        <td><%= septic.zipcode %></td>
        <td><%= septic.contact_name %></td>
        <td><%= septic.company_website %></td>
        <td><%= septic.company_phone %></td>
        <td><%= septic.email %></td>
        <td><%= link_to 'Show', septic %></td>
        <td><%= link_to 'Edit', edit_septic_path(septic) %></td>
        <td><%= link_to 'Destroy', septic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

