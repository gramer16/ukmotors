
<h4><strong>Search Results:</strong></h4><br>

<div class="thumbnail">
  <div class="center"> 
    <div class="row">
      <% @airconditioners.each do |airconditioner| %>
      <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(airconditioner.image.url), airconditioner %>
        <div class="caption">
          <h4><strong><%= airconditioner.company_name %></strong></h4>
          <strong><th>Company Website: </th></strong><br>
            <%= link_to airconditioner.company_website, airconditioner.company_website %><br>
            <strong><th>Phone Number: </th></strong><br>
            <%= airconditioner.company_phone %><br>
           <strong><th>Address: </th></strong><br>
           <%= airconditioner.address %><br> 
           <strong><th>City: </th></strong><%= airconditioner.city %><br>
           <strong><th>Zipcode: </th></strong><br><%= airconditioner.zipcode %><br>
           <br>
           
           <td><%= link_to 'Show', airconditioner, class: "btn btn-warning" %></td>
        
        <td><%= link_to 'Edit', edit_airconditioner_path(airconditioner), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', airconditioner, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %></td>
        </div>
      </div>
    </div>
    <% end %>
    </div>

  </div>
</div>   
   

<br>
