<h1>Listing termiteinspectors</h1>

<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>Company description</th>
      <th>Address</th>
      <th>City</th>
      <th>Zipcode</th>
      <th>Contact name</th>
      <th>Company website</th>
      <th>Company phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @termiteinspectors.each do |termiteinspector| %>
      <tr>
        <td><%= termiteinspector.company_name %></td>
        <td><%= termiteinspector.company_description %></td>
        <td><%= termiteinspector.address %></td>
        <td><%= termiteinspector.city %></td>
        <td><%= termiteinspector.zipcode %></td>
        <td><%= termiteinspector.contact_name %></td>
        <td><%= termiteinspector.company_website %></td>
        <td><%= termiteinspector.company_phone %></td>
        <td><%= termiteinspector.email %></td>
        <td><%= link_to 'Show', termiteinspector %></td>
        <td><%= link_to 'Edit', edit_termiteinspector_path(termiteinspector) %></td>
        <td><%= link_to 'Destroy', termiteinspector, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

