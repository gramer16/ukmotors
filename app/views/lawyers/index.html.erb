<h1>Listing lawyers</h1>

<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>Company description</th>
      <th>Address</th>
      <th>City</th>
      <th>Zipcode</th>
      <th>Contact name</th>
      <th>Company website</th>
      <th>Company phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lawyers.each do |lawyer| %>
      <tr>
        <td><%= lawyer.company_name %></td>
        <td><%= lawyer.company_description %></td>
        <td><%= lawyer.address %></td>
        <td><%= lawyer.city %></td>
        <td><%= lawyer.zipcode %></td>
        <td><%= lawyer.contact_name %></td>
        <td><%= lawyer.company_website %></td>
        <td><%= lawyer.company_phone %></td>
        <td><%= lawyer.email %></td>
        <td><%= link_to 'Show', lawyer %></td>
        <td><%= link_to 'Edit', edit_lawyer_path(lawyer) %></td>
        <td><%= link_to 'Destroy', lawyer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

