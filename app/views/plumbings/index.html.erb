<h1>Listing plumbings</h1>

<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>Company description</th>
      <th>Address</th>
      <th>City</th>
      <th>Zipcode</th>
      <th>Contact name</th>
      <th>Company website</th>
      <th>Company phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plumbings.each do |plumbing| %>
      <tr>
        <td><%= plumbing.company_name %></td>
        <td><%= plumbing.company_description %></td>
        <td><%= plumbing.address %></td>
        <td><%= plumbing.city %></td>
        <td><%= plumbing.zipcode %></td>
        <td><%= plumbing.contact_name %></td>
        <td><%= plumbing.company_website %></td>
        <td><%= plumbing.company_phone %></td>
        <td><%= link_to 'Show', plumbing %></td>
        <td><%= link_to 'Edit', edit_plumbing_path(plumbing) %></td>
        <td><%= link_to 'Destroy', plumbing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

