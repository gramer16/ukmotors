<h1>Listing molds</h1>

<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>Company description</th>
      <th>Address</th>
      <th>City</th>
      <th>Zipcode</th>
      <th>Contact name</th>
      <th>Company website</th>
      <th>Company phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @molds.each do |mold| %>
      <tr>
        <td><%= mold.company_name %></td>
        <td><%= mold.company_description %></td>
        <td><%= mold.address %></td>
        <td><%= mold.city %></td>
        <td><%= mold.zipcode %></td>
        <td><%= mold.contact_name %></td>
        <td><%= mold.company_website %></td>
        <td><%= mold.company_phone %></td>
        <td><%= link_to 'Show', mold %></td>
        <td><%= link_to 'Edit', edit_mold_path(mold) %></td>
        <td><%= link_to 'Destroy', mold, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

